<script>
const API_BASE = '/api/crm';

let allContacts = [];
let allTags = [];
let activeTag = null;

// Fetch all contacts
async function loadContacts(searchQuery = '', tag = null) {
  const params = new URLSearchParams();
  if (searchQuery) params.set('q', searchQuery);
  if (tag) params.set('tag', tag);

  try {
    const response = await fetch(`${API_BASE}?${params}`);
    const data = await response.json();
    
    if (!data.ok) {
      throw new Error(data.error || 'Failed to load contacts');
    }

    return data.contacts || [];
  } catch (error) {
    console.error('Error loading contacts:', error);
    return [];
  }
}

// Fetch all tags
async function loadTags() {
  try {
    const response = await fetch(`${API_BASE}?tags=true`);
    const data = await response.json();
    
    if (!data.ok) {
      throw new Error(data.error || 'Failed to load tags');
    }

    return data.tags || [];
  } catch (error) {
    console.error('Error loading tags:', error);
    return [];
  }
}

// Fetch single contact details
async function loadContactDetails(id) {
  try {
    const response = await fetch(`${API_BASE}?id=${id}`);
    const data = await response.json();
    
    if (!data.ok) {
      throw new Error(data.error || 'Failed to load contact');
    }

    return data.contact;
  } catch (error) {
    console.error('Error loading contact:', error);
    return null;
  }
}

// Render contacts grid
function renderContacts(contacts) {
  const container = document.getElementById('contacts-container');
  
  if (contacts.length === 0) {
    container.innerHTML = `
      <div class="empty-state">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <p>No contacts found</p>
      </div>
    `;
    return;
  }

  const grid = document.createElement('div');
  grid.className = 'contacts-grid';

  contacts.forEach(contact => {
    const card = document.createElement('div');
    card.className = 'contact-card';
    card.dataset.contactId = contact.id;

    const metaItems = [];
    if (contact.email) {
      metaItems.push(`
        <div class="contact-meta-item">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>${contact.email}</span>
        </div>
      `);
    }

    if (contact.phone) {
      metaItems.push(`
        <div class="contact-meta-item">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>${contact.phone}</span>
        </div>
      `);
    }

    if (contact.organization) {
      metaItems.push(`
        <div class="contact-meta-item">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <span>${contact.organization}</span>
        </div>
      `);
    }

    const tagBadges = contact.tags.map(tag => 
      `<span class="tag-badge">${tag}</span>`
    ).join('');

    card.innerHTML = `
      <div class="contact-name">${contact.name}</div>
      <div class="contact-meta">
        ${metaItems.join('')}
      </div>
      <div class="contact-tags">
        ${tagBadges}
      </div>
    `;

    card.addEventListener('click', () => openContactModal(contact.id));
    grid.appendChild(card);
  });

  container.innerHTML = '';
  container.appendChild(grid);
}

// Render tag filters
function renderTagFilters(tags) {
  const container = document.getElementById('filter-tags');
  
  if (tags.length === 0) {
    container.innerHTML = '';
    return;
  }

  const buttons = tags.map(tag => {
    const btn = document.createElement('button');
    btn.className = 'tag-filter';
    btn.textContent = `${tag.tag} (${tag.count})`;
    btn.dataset.tag = tag.tag;
    
    if (activeTag === tag.tag) {
      btn.classList.add('active');
    }
    
    btn.addEventListener('click', () => filterByTag(tag.tag));
    return btn;
  });

  // Add clear filters button
  const clearBtn = document.createElement('button');
  clearBtn.className = 'clear-filters';
  clearBtn.textContent = '‚úñ Clear Filter';
  clearBtn.addEventListener('click', clearFilters);
  clearBtn.style.display = activeTag ? 'block' : 'none';

  container.innerHTML = '';
  buttons.forEach(btn => container.appendChild(btn));
  container.appendChild(clearBtn);
}

// Filter by tag
async function filterByTag(tag) {
  if (activeTag === tag) {
    clearFilters();
    return;
  }

  activeTag = tag;
  const contacts = await loadContacts('', tag);
  allContacts = contacts;
  renderContacts(contacts);
  renderTagFilters(allTags);
  updateStats();
}

// Clear filters
async function clearFilters() {
  activeTag = null;
  const searchInput = document.getElementById('search-input');
  searchInput.value = '';
  const contacts = await loadContacts();
  allContacts = contacts;
  renderContacts(contacts);
  renderTagFilters(allTags);
  updateStats();
}

// Search
let searchTimeout;
document.getElementById('search-input').addEventListener('input', (e) => {
  clearTimeout(searchTimeout);
  const query = e.target.value.trim();
  
  searchTimeout = setTimeout(async () => {
    const contacts = await loadContacts(query, activeTag);
    allContacts = contacts;
    renderContacts(contacts);
    updateStats();
  }, 300);
});

// Open contact modal
async function openContactModal(contactId) {
  const contact = await loadContactDetails(contactId);
  
  if (!contact) {
    alert('Failed to load contact details');
    return;
  }

  const modal = document.getElementById('modal-overlay');
  const modalName = document.getElementById('modal-name');
  const modalMeta = document.getElementById('modal-meta');
  const modalTags = document.getElementById('modal-tags');
  const modalNotes = document.getElementById('modal-notes');
  const notesSection = document.getElementById('notes-section');
  const modalInteractions = document.getElementById('modal-interactions');
  const interactionsSection = document.getElementById('interactions-section');

  modalName.textContent = contact.name;

  // Meta info
  const metaItems = [];
  if (contact.email) {
    metaItems.push(`
      <div class="modal-meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>${contact.email}</span>
      </div>
    `);
  }
  if (contact.phone) {
    metaItems.push(`
      <div class="modal-meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>${contact.phone}</span>
      </div>
    `);
  }
  if (contact.organization) {
    metaItems.push(`
      <div class="modal-meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <span>${contact.organization}</span>
      </div>
    `);
  }
  if (contact.role) {
    metaItems.push(`
      <div class="modal-meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>${contact.role}</span>
      </div>
    `);
  }
  modalMeta.innerHTML = metaItems.join('');

  // Tags
  const tagBadges = contact.tags.map(tag => 
    `<span class="tag-badge">${tag}</span>`
  ).join('');
  modalTags.innerHTML = tagBadges;

  // Notes
  if (contact.notes) {
    modalNotes.textContent = contact.notes;
    notesSection.style.display = 'block';
  } else {
    notesSection.style.display = 'none';
  }

  // Interactions
  if (contact.interactions && contact.interactions.length > 0) {
    const interactionItems = contact.interactions.map(interaction => `
      <div class="interaction-item">
        <div class="interaction-date">${new Date(interaction.date).toLocaleString()}</div>
        <div class="interaction-note">${interaction.note}</div>
      </div>
    `).join('');
    modalInteractions.innerHTML = interactionItems;
    interactionsSection.style.display = 'block';
  } else {
    interactionsSection.style.display = 'none';
  }

  modal.classList.add('show');
}

// Close modal
document.getElementById('modal-close').addEventListener('click', () => {
  document.getElementById('modal-overlay').classList.remove('show');
});

document.getElementById('modal-overlay').addEventListener('click', (e) => {
  if (e.target === e.currentTarget) {
    document.getElementById('modal-overlay').classList.remove('show');
  }
});

// Update stats
function updateStats() {
  document.getElementById('filtered-count').textContent = allContacts.length;
}

// Initialize
async function init() {
  // Load tags first
  allTags = await loadTags();
  renderTagFilters(allTags);
  document.getElementById('total-tags').textContent = allTags.length;

  // Load all contacts
  allContacts = await loadContacts();
  document.getElementById('total-contacts').textContent = allContacts.length;
  renderContacts(allContacts);
  updateStats();
}

init();
</script>

