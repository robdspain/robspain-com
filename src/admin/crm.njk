    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .contact-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .contact-meta-item svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .contact-tags {
    display: flex;
