    gap: 0.75rem;
  }

  .modal-meta-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
  }

  .modal-meta-item svg {
    width: 20px;
    height: 20px;
    color: var(--primary);
    flex-shrink: 0;
  }

  .modal-body {
    padding: 2rem;
  }

  .modal-section {
    margin-bottom: 2rem;
  }

  .modal-section h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-dark);
  }

  .modal-section p {
    line-height: 1.6;
    color: var(--text-muted);
  }

  .interactions-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .interaction-item {
    padding: 1rem;
    background: var(--bg-slate);
    border-radius: 12px;
    border-left: 4px solid var(--primary);
  }

  .interaction-date {
    font-size: 0.75rem;
    color: var(--text-muted);
