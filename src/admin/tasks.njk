<script>
  // localStorage key (fresh start ‚Äî new structure)
  const STORAGE_KEY = 'robTasksV2';

  function loadState() {
    try { return JSON.parse(localStorage.getItem(STORAGE_KEY)) || {}; } catch { return {}; }
  }

  function saveState(state) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(state));
  }

  function toggle(id) {
    const state = loadState();
    state[id] = !state[id];
    saveState(state);
    render();
  }

  function toggleDetails(btn) {
    const details = btn.nextElementSibling;
    const open = details.classList.toggle('open');
    btn.textContent = open ? '‚ñº Hide steps' : '‚ñ∂ Show steps';
  }

  function render() {
    const state = loadState();
    const allItems = document.querySelectorAll('.task-item');
    let totalDone = 0;
    const total = allItems.length;

    allItems.forEach(item => {
      const id = item.dataset.id;
      if (state[id]) {
        item.classList.add('done');
        item.querySelector('.task-check').textContent = '‚úÖ';
      } else {
        item.classList.remove('done');
        item.querySelector('.task-check').textContent = '';
      }
    });

    // Per-section progress
    document.querySelectorAll('.task-section').forEach(section => {
      const items = section.querySelectorAll('.task-item');
      const done = [...items].filter(i => state[i.dataset.id]).length;
      const sTotal = items.length;
      totalDone += done;
      const pct = sTotal ? Math.round((done / sTotal) * 100) : 0;
      const fill = section.querySelector('.mini-progress-fill');
      const label = section.querySelector('.section-progress-text');
      if (fill) fill.style.width = pct + '%';
      if (label) label.textContent = `${done} of ${sTotal} done`;
    });

    // Motivation
    const el = document.getElementById('motivation');
    if (totalDone === 0) {
      el.textContent = `üéØ ${total} tasks to go. Start with the red section!`;
    } else if (totalDone === total) {
      el.textContent = `üéâ ALL ${total} TASKS DONE! You're a legend! üèÜ`;
    } else {
      el.textContent = `üéâ ${totalDone} of ${total} tasks done! Keep going! üí™`;
    }
  }

  document.addEventListener('DOMContentLoaded', render);
</script>
