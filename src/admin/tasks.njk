function saveTasks() {
  localStorage.setItem('robTasks', JSON.stringify(tasks));
  updateCounts();
  updateLastUpdated();
  renderTasks();
}

function updateLastUpdated() {
  const now = new Date().toLocaleString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    hour: 'numeric', 
    minute: '2-digit',
    hour12: true 
  });
  document.getElementById('last-updated').textContent = now;
}

function updateCounts() {
  // Update column counts
  ['urgent', 'business', 'mobile', 'calaba', 'capabilities', 'progress', 'blocked', 'done'].forEach(column => {
    const count = tasks[column]?.length || 0;
    const countEl = document.getElementById(`count-${column}`);
    if (countEl) countEl.textContent = count;
    
    const statEl = document.getElementById(`stat-${column}`);
    if (statEl) statEl.textContent = count;
  });
  
  // Update section counts
  const sectionCounts = {
    'urgent': tasks.urgent?.length || 0,
    'business': tasks.business?.length || 0,
    'mobile': tasks.mobile?.length || 0,
    'calaba': tasks.calaba?.length || 0,
    'capabilities': tasks.capabilities?.length || 0,
    'automation': automationAnalysis.length
  };
  
  Object.keys(sectionCounts).forEach(section => {
    const el = document.getElementById(`section-count-${section}`);
    if (el) el.textContent = sectionCounts[section];
  });
  
  // Automation stat
  const canAutomate = automationAnalysis.filter(a => a.canAutomate === true).length;
  document.getElementById('stat-automate').textContent = canAutomate;
}

function renderTasks() {
  // Render task columns
  ['urgent', 'business', 'mobile', 'calaba', 'capabilities', 'progress', 'blocked', 'done'].forEach(column => {
    const container = document.getElementById(`${column}-tasks`);
    if (!container || !tasks[column]) return;
    
    container.innerHTML = tasks[column].map(task => `
      <div class="task-card" draggable="true" data-id="${task.id}" data-column="${column}">
        <div class="task-title">${task.title}</div>
        <div class="task-description">${task.description}</div>
        ${task.steps ? `<div class="task-steps">${task.steps}</div>` : ''}
        <div class="task-footer">
          <div class="task-meta">
            <span class="task-time">‚è±Ô∏è ${task.time}</span>
            ${task.priority ? `<span class="task-priority priority-${task.priority}">${task.priority}</span>` : ''}
          </div>
          <div class="task-actions">
            ${column !== 'done' ? `<button class="task-btn complete-btn" onclick="markDone(${task.id}, '${column}')">‚úì Done</button>` : ''}
            <button class="task-btn delete-btn" onclick="deleteTask(${task.id}, '${column}')">√ó Delete</button>
          </div>
        </div>
      </div>
    `).join('');
    
    // Add drag and drop listeners
    container.querySelectorAll('.task-card').forEach(card => {
      card.addEventListener('dragstart', handleDragStart);
      card.addEventListener('dragend', handleDragEnd);
    });
  });
  
  // Render website status cards
  renderWebsites();
  
  // Render automation analysis
  renderAutomation();
  
  updateCounts();
  updateLastUpdated();
}

