let draggedTask = null;
let draggedColumn = null;

function handleDragStart(e) {
  draggedTask = this;
  draggedColumn = this.dataset.column;
  this.classList.add('dragging');
  e.dataTransfer.effectAllowed = 'move';
}

function handleDragEnd(e) {
  this.classList.remove('dragging');
}

// Add drop zones
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.task-list').forEach(list => {
    list.addEventListener('dragover', e => {
      e.preventDefault();
      e.dataTransfer.dropEffect = 'move';
    });
    
    list.addEventListener('drop', e => {
      e.preventDefault();
      const targetColumn = list.id.replace('-tasks', '');
      const taskId = parseInt(draggedTask.dataset.id);
      
      // Find and move task
      const sourceColumn = draggedColumn;
      const taskIndex = tasks[sourceColumn].findIndex(t => t.id === taskId);
      
      if (taskIndex !== -1) {
        const task = tasks[sourceColumn].splice(taskIndex, 1)[0];
        tasks[targetColumn].push(task);
        saveTasks();
      }
    });
  });
  
  renderTasks();
});

function markDone(id, column) {
  const index = tasks[column].findIndex(t => t.id === id);
  if (index !== -1) {
    const task = tasks[column].splice(index, 1)[0];
    tasks.done.push(task);
    saveTasks();
  }
}

function deleteTask(id, column) {
  if (confirm('Delete this task?')) {
    const index = tasks[column].findIndex(t => t.id === id);
    if (index !== -1) {
      tasks[column].splice(index, 1);
      saveTasks();
    }
  }
}

function addTask(column) {
  const title = prompt('Task title:');
  if (!title) return;
  
  const description = prompt('Description:');
  const time = prompt('Estimated time:');
  const priority = prompt('Priority (high/medium/low):') || 'medium';
  
  const newTask = {
    id: Date.now(),
    title,
    description: description || '',
    steps: '',
    time: time || '?',
    priority
  };
  
  tasks[column].push(newTask);
  saveTasks();
}

function toggleSection(sectionId) {
  const content = document.getElementById(`${sectionId}-content`);
  const button = content.previousElementSibling;
  
  content.classList.toggle('collapsed');
  button.classList.toggle('collapsed');
  
  // Save state
  const collapsed = content.classList.contains('collapsed');
  localStorage.setItem(`section-${sectionId}-collapsed`, collapsed);
}

function exportTasks() {
  const dataStr = JSON.stringify(tasks, null, 2);
  const dataBlob = new Blob([dataStr], { type: 'application/json' });
  const url = URL.createObjectURL(dataBlob);
  const link = document.createElement('a');
  link.href = url;
  link.download = `rob-tasks-${new Date().toISOString().split('T')[0]}.json`;
  link.click();
}

function clearDone() {
  if (confirm('Clear all completed tasks?')) {
    tasks.done = [];
    saveTasks();
  }
}

// Restore collapsed state
document.addEventListener('DOMContentLoaded', () => {
  ['business', 'websites', 'mobile', 'calaba', 'capabilities'].forEach(sectionId => {
    const collapsed = localStorage.getItem(`section-${sectionId}-collapsed`) === 'true';
    if (collapsed) {
      const content = document.getElementById(`${sectionId}-content`);
      const button = content.previousElementSibling;
      content.classList.add('collapsed');
      button.classList.add('collapsed');
    }
  });
});
