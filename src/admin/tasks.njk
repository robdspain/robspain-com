  // Load task states from localStorage
  function loadTaskStates() {
    const saved = localStorage.getItem('robTaskStates');
    if (saved) {
      const states = JSON.parse(saved);
      tasks.forEach(task => {
        if (states[task.id]) {
          if (typeof states[task.id] === 'object') {
            task.status = states[task.id].status || task.status;
            task.dueDate = states[task.id].dueDate || task.dueDate || null;
          } else {
            task.status = states[task.id];
          }
        }
      });
    }
  }

  // Save task states
  function saveTaskStates() {
    const states = {};
    tasks.forEach(task => {
      states[task.id] = { status: task.status, dueDate: task.dueDate || null };
    });
    localStorage.setItem('robTaskStates', JSON.stringify(states));
  }

  // Date helpers
  function formatDate(dateStr) {
    if (!dateStr) return '';
    const d = new Date(dateStr + 'T00:00:00');
    const today = new Date(); today.setHours(0,0,0,0);
    const tomorrow = new Date(today); tomorrow.setDate(tomorrow.getDate() + 1);
    const diff = Math.round((d - today) / 86400000);
    if (diff === 0) return 'üìÖ Today';
    if (diff === 1) return 'üìÖ Tomorrow';
    if (diff < 0) return 'üî¥ Overdue (' + d.toLocaleDateString('en-US', {month:'short', day:'numeric'}) + ')';
    if (diff <= 7) return 'üìÖ ' + d.toLocaleDateString('en-US', {weekday:'short', month:'short', day:'numeric'});
    return 'üìÖ ' + d.toLocaleDateString('en-US', {month:'short', day:'numeric'});
  }

  function getTomorrow() {
    const d = new Date();
    d.setDate(d.getDate() + 1);
    return d.toISOString().split('T')[0];
  }

  function getToday() {
    return new Date().toISOString().split('T')[0];
  }

  // Update progress
  function updateProgress() {
    const total = tasks.length;
    const completed = tasks.filter(t => t.status === 'done').length;
    const inProgress = tasks.filter(t => t.status === 'in-progress').length;
    const remaining = total - completed;
    const percentage = Math.round((completed / total) * 100);

    document.getElementById('total-tasks').textContent = total;
    document.getElementById('completed-tasks').textContent = completed;
    document.getElementById('in-progress-tasks').textContent = inProgress;
    document.getElementById('remaining-tasks').textContent = remaining;
    document.getElementById('progress-fill').style.width = percentage + '%';
    document.getElementById('progress-fill').textContent = percentage + '%';
  }

  // Render task card
  function renderTask(task) {
    const platformClass = task.platform.includes('robspain') ? 'badge-robspain' : 
                         task.platform.includes('behaviorschool') ? 'badge-behaviorschool' : 
                         task.platform.includes('iOS') ? 'badge-ios' : 'badge-both';

    const checkboxIcon = task.status === 'done' ? '‚úÖ' : task.status === 'in-progress' ? 'üîÑ' : '';

    const card = document.createElement('div');
    card.className = `task-card ${task.category} ${task.status}`;
    card.dataset.taskId = task.id;

    card.innerHTML = `
      <div class="task-header">
        <div class="task-checkbox">${checkboxIcon}</div>
        <div class="task-info">
          <div class="task-title">${task.title}</div>
          <div class="task-meta">
            <span class="task-badge ${platformClass}">${task.platform}</span>
            <span class="task-time">‚è±Ô∏è ${task.time}</span>
            ${task.dueDate ? `<span class="task-deadline">${formatDate(task.dueDate)}</span>` : (task.deadline ? `<span class="task-deadline">${task.deadline}</span>` : '')}
            ${task.priority ? '<span class="task-priority">‚ö° High Priority</span>' : ''}
          </div>
        </div>
      </div>
      <div class="task-instructions">
        <h4>Step-by-step:</h4>
        <ol>
          ${task.instructions.map(step => `<li>${step}</li>`).join('')}
        </ol>
        <div class="due-date-controls">
          <label style="font-size:0.85rem;font-weight:700;color:var(--text-muted);">Due Date:</label>
          <input type="date" class="date-picker" value="${task.dueDate || ''}" style="font-size:1rem;padding:6px 10px;border:2px solid var(--border-light);border-radius:8px;background:#fff;color:var(--text-dark);cursor:pointer;">
          <button class="tomorrow-btn" title="Move to tomorrow">üìÖ Tomorrow</button>
          <button class="clear-date-btn" title="Clear date">‚úñ</button>
        </div>
        <div class="status-buttons">
          <button class="status-btn not-started" data-status="not-started">‚¨ú Not Started</button>
          <button class="status-btn in-progress" data-status="in-progress">üîÑ In Progress</button>
          <button class="status-btn done" data-status="done">‚úÖ Done</button>
        </div>
      </div>
      <button class="expand-toggle">üëâ Show Instructions</button>
    `;

    // Toggle expand
    const toggleBtn = card.querySelector('.expand-toggle');
    toggleBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      card.classList.toggle('expanded');
      toggleBtn.textContent = card.classList.contains('expanded') ? 'üîº Hide' : 'üëâ Show Instructions';
    });

    // Date picker
    const datePicker = card.querySelector('.date-picker');
    datePicker.addEventListener('change', (e) => {
      e.stopPropagation();
      task.dueDate = datePicker.value || null;
      saveTaskStates();
      renderAllTasks();
    });

    // Tomorrow button
    card.querySelector('.tomorrow-btn').addEventListener('click', (e) => {
      e.stopPropagation();
      task.dueDate = getTomorrow();
      saveTaskStates();
      renderAllTasks();
    });

    // Clear date button
    card.querySelector('.clear-date-btn').addEventListener('click', (e) => {
      e.stopPropagation();
      task.dueDate = null;
      saveTaskStates();
      renderAllTasks();
    });

    // Status buttons
    card.querySelectorAll('.status-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        task.status = btn.dataset.status;
        saveTaskStates();
        updateProgress();
        renderAllTasks();
      });
    });

    return card;
  }

  // Render all tasks by category
  function renderAllTasks() {
    const grids = {
      'urgent': document.getElementById('urgent-grid'),
      'money': document.getElementById('money-grid'),
      'later': document.getElementById('later-grid'),
      'nice': document.getElementById('nice-grid')
    };

    Object.values(grids).forEach(grid => {
      if (grid) grid.innerHTML = '';
    });

    tasks.forEach(task => {
      const grid = grids[task.category];
      if (grid) {
        grid.appendChild(renderTask(task));
      }
    });
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    loadTaskStates();
    updateProgress();
    renderAllTasks();
  });
</script>
