<script>
// CALABA Email Signup Handler
(function() {
  const form = document.querySelector('.calaba-email-form');
  const message = document.querySelector('.calaba-message');
  
  if (!form) return;
  
  // Check if already signed up
  const signedUp = localStorage.getItem('robspain_email_signup');
  const calabaSignup = localStorage.getItem('robspain_calaba_signup');
  
  if (signedUp || calabaSignup) {
    message.textContent = "‚úÖ You're already registered! We'll send the resources after the conference.";
    message.className = 'calaba-message text-sm font-medium text-green-700 bg-green-100 border border-green-300 px-4 py-3 rounded-lg';
    message.style.display = 'block';
    form.style.display = 'none';
  }
  
  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const button = this.querySelector('button[type="submit"]');
    const input = this.querySelector('input[name="email"]');
    const originalText = button.textContent;
    
    button.disabled = true;
    button.textContent = 'Submitting...';
    
    try {
      const response = await fetch('/.netlify/functions/collect-email', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email: input.value,
          source: 'calaba-2026'
        })
      });
      
      const data = await response.json();
      
      if (response.ok || response.status === 409) {
        message.textContent = "‚úÖ Perfect! We'll email you the slides and resources after the conference.";
        message.className = 'calaba-message text-sm font-medium text-green-700 bg-green-100 border border-green-300 px-4 py-3 rounded-lg';
        message.style.display = 'block';
        
        localStorage.setItem('robspain_calaba_signup', 'true');
        localStorage.setItem('robspain_email_signup', 'true');
        
        // Hide form
        setTimeout(() => {
          form.style.display = 'none';
        }, 1500);
      } else {
        throw new Error(data.error || 'Submission failed');
      }
    } catch (error) {
      console.error('CALABA signup error:', error);
      message.textContent = '‚ùå ' + (error.message || 'Something went wrong. Please try again.');
      message.className = 'calaba-message text-sm font-medium text-red-700 bg-red-100 border border-red-300 px-4 py-3 rounded-lg';
      message.style.display = 'block';
      
      button.disabled = false;
      button.textContent = originalText;
    }
  });
})();
</script>
