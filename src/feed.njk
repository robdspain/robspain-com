---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Rob Spain, BCBA - School BCBA Blog</title>
    <link>https://robspain.com/blog.html</link>
    <description>Insights, strategies, and systematic approaches for school-based behavior analysis from Rob Spain, BCBA.</description>
    <language>en-us</language>
    {% set lastPost = collections.posts | last %}
    {% if lastPost %}
    <lastBuildDate>{{ lastPost.date | rssDate }}</lastBuildDate>
    {% endif %}
    <atom:link href="https://robspain.com/feed.xml" rel="self" type="application/rss+xml"/>
    <image>
      <url>https://robspain.com/public/images/profile-Rob.png</url>
      <title>Rob Spain, BCBA - School BCBA Blog</title>
      <link>https://robspain.com/blog.html</link>
    </image>
    {% for post in collections.posts | reverse %}
    <item>
      <title>{{ post.data.title | escape }}</title>
      <link>https://robspain.com{{ post.url }}</link>
      <guid isPermaLink="true">https://robspain.com{{ post.url }}</guid>
      <pubDate>{{ post.date | rssDate }}</pubDate>
      <description>{{ post.data.description | escape }}</description>
      {% if post.data.image %}
      <enclosure url="https://robspain.com{{ post.data.image }}" type="image/jpeg"/>
      {% endif %}
      <author>rob@robspain.com (Rob Spain)</author>
    </item>
    {% endfor %}
  </channel>
</rss>
